{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 9104
    },
    "firestore": {
      "port": 9103
    },
    "database": {
      "port": 9102
    },
    "hosting": {
      "port": 9101
    },
    "storage": {
      "port": 9100
    },
    "ui": {
      "enabled": true,
      "port": 9001
    }
  }
}
